{% extends 'base.html.twig' %}

{% block title %}{{ 'header.tag.remove' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'header.tag.remove' | trans }}</h1>

        {{ form_start(form, { method: 'DELETE', action: url('admin_tag_remove', { id: tag.id }) }) }}
            {{ form_widget(form) }}

            <div class="form-group float-right">
                <button type="submit" class="btn btn-danger">{{ 'link.tag.remove' | trans }}</button>
            </div>

            <div class="form-group">
                <a href="{{ url('admin_tag_list') }}" class="btn btn-link">
                    {{ 'link.back_to_list' | trans }}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
