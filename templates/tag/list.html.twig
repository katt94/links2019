{% extends 'base.html.twig' %}

{% block title %}{{ 'header.tag.list' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'header.tag.list' | trans }} <a href="{{ path('admin_tag_add') }}" class="btn btn-sm btn-primary">{{ 'link.tag.add' | trans }}</a></h1>

        <table class="table table-bordered">
            <thead class="thead-light">
            <tr>
                <th>{{ 'table.thead.id' | trans }}</th>
                <th>{{ 'table.thead.tag.name' | trans }}</th>
                <th>{{ 'table.thead.actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
                {% for tag in pagination %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a class="btn btn-outline-info btn-sm" href="{{ path('admin_tag_edit', { id: tag.id }) }}">{{ 'link.edit' | trans }}</a>
                                <a class="btn btn-outline-danger btn-sm" onclick="return confirm('{{ 'confirm.remove.tag_with_name' | trans({ '%name%': tag.name }) }}');" href="{{ path('admin_tag_remove', { id: tag.id }) }}">{{ 'link.tag.remove' | trans }}</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
