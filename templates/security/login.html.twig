{% extends 'base.html.twig' %}

{% block title %}{{ 'login.page' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'login.page' | trans }}</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="exampleInputEmail1">{{ 'login.user' | trans }}</label>
                <input type="text" name="username" value="{{ last_username }}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="{{ 'login.user.placeholder' | trans }}">
                <small id="emailHelp" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">{{ 'login.password' | trans }}</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="{{ 'login.password' | trans }}">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="_remember_me" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">{{ 'login.remember.me' | trans }}</label>
            </div>

            <button type="submit" class="btn btn-primary">{{ 'link.login' | trans }}</button>
        </form>
    </div>
{% endblock %}
